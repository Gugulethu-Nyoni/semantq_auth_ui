// Sidebar toggle functionality
        document.getElementById('sidebar-toggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const isExpanded = sidebar.getAttribute('aria-expanded') === 'true';
            sidebar.setAttribute('aria-expanded', !isExpanded);
            
            // Toggle icons
            document.getElementById('mobile-toggle-icon').classList.toggle('fa-bars');
            document.getElementById('mobile-toggle-icon').classList.toggle('fa-times');
            document.getElementById('desktop-toggle-icon').classList.toggle('fa-arrow-left');
            document.getElementById('desktop-toggle-icon').classList.toggle('fa-arrow-right');
        });

        

        // Function to show modal (example)
