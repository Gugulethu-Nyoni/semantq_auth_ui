@script
import '../../../../../global.css';
import { isAuthenticated, user, accessLevel, logout } from '/public/auth/js/auth.js';
import { $effect } from '@semantq/state';

import AnyGrid from 'anygridjs';

let surveys = [];
let grid; // declared outside so we can re-use or update if needed

const columns = [
  {
    name: 'id',
    header: 'ID',
    render: (value, row) => `<a href="/auth/res/dashboard/survey/${row.id}">${row.id}</a>`
  },
  {
    name: 'title',
    header: 'Title'
  },
  {
    name: 'description',
    header: 'Description',
    actions: [
      {
        label: 'EDIT',
        url: 'edit/{id}',
        class: 'edit',
        id: 'edit-{id}',
      },
      {
        label: 'DELETE',
        url: 'delete/{id}',
        class: 'delete',
        id: 'delete-{id}',
        confirm: true,
      },
    ],
  }
];

const features = {
  initialItemsPerPage: 30,
  csvExport: true,
  excelExport: true,
  theme: 'dark'
};

async function fetchSurveysByUser() {
  const userId = user.id; // Proxy object, direct access
  if (!userId) {
    console.warn('No user ID found; user might not be logged in.');
    return [];
  }

  try {
    const response = await fetch(`http://localhost:3003/survey/surveys?userId=${userId}`, {
      method: 'GET',
      headers: {
        'Content-Type': 'application/json'
      }
    });

    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }

    const data = await response.json();
    console.log(`✅ Surveys for user ${userId}:`, data);
    surveys = data;

    // Initialise or update the grid
    if (grid) {
      grid.updateData(surveys);
    } else {
      grid = new AnyGrid(surveys, columns, features);
    }

    return data;
  } catch (error) {
    console.error('❌ Failed to fetch surveys:', error);
    return [];
  }
}

// Run when auth is ready and user is available
$effect(() => {
  if (isAuthenticated.value && user.id) {
    console.log('👋 Welcome', user.name, user.id);
    fetchSurveysByUser(); // will handle grid logic inside
  }
});



